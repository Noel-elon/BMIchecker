<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/body_mass_index</item>
        <item name="postSplashScreenTheme">@style/Theme.NoelNwaelugo</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.NoelNwaelugo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- ToolBar -->
    <style name="ToolbarTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/main_blue</item>
    </style>

    <style name="ToolbarTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/ralewayregular</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
    </style>
</resources>